{{> cabecera}}


<div class='w3-content' style='width: 90%;margin-top: 100px'>
    <h2 class='w3-wide' style="text-align: center">Tu lista de notas  Pendientes</h2>


<div class="contenedor" style="width: 100%">
    <!---parte del ajax pincipio-->
    <div class="form-group col-md-3">
        <label for="cars">Publicacion</label>
        <select name="publicacion" id="publicacion" onchange="muestraEdiciones(this.value)" class="form-control" style="width:100%;"  >
            <option disabled selected>SELECCIONE UNA OPCION</option>
            {{#publicaciones}}
                <option value={{id}}>{{informacion}}</option>
            {{/publicaciones}}
        </select>
    </div>

    <div class="form-group col-md-3">
        <label>Edicion</label>
        <select class="form-control" name="edicion" onclick="muestraSeccionesContenidista(this.value)" id="edicion" style="width:100%;">
            <option disabled selected>SELECCIONE UNA OPCION</option>
        </select>
    </div>
    <div class="form-group col-md-3">
        <label>Seccion</label>

        <select class="form-control" name="seccion"  onchange="muestraNotas(this.value)" id="seccion" style="width:100%">
            <option disabled selected>SELECCIONE UNA OPCION</option>
        </select>
    </div>
    <!---parte del ajax fin-->



    <div style="width: 40%;height: 100%" id="notas">
    </div>
</div>
{{> footer}}