{{> cabecera}}

<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Infonete</h2>

    <div class='w3-row w3-padding-32'>
        {{#publicaciones}}
            <div class='w3-third' style=" height: 23%;">
                <h3><p>{{informacion}}</p></h3>
                <div style="width: 100%;height: 70px;">
                    <img src='../{{ruta}}' class='w3-round w3-margin-bottom' style='width:90%;height: 70%;'>
                </div>
                <div style="width: 100%;padding: 2%;">
                    <form method="post" action="/lector/verEdiciones" >
                        <button type="submit" name="idPublicacion"
                         class="btn btn-outline-primary" value={{id}}>Ver Ediciones</button>
                    </form>
                </div>

            </div>
        {{/publicaciones}}
    </div>

</div>

{{> footer}}