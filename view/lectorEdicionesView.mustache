{{> cabecera}}

<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Infonete</h2>

    <div class="d-flex">
        {{#ediciones}}
            <div class="card" style="width: 20.5rem;">
                <div class="card-body">
                    <h5 class="card-title">Edicion numero #{{descrip}}</h5>
                    <img class="card-img-top mb-2" src='../public/img/numeral.png' alt="Card image cap">
                    <div class="d-flex">
                        <a href="/lector/verNotasxEdicion?idEdicion={{id}}" class="btn btn-outline-primary card-link" value={{id}}>Ver notas</a>
                        <a href="validarComprarEdicion?idEdicion={{id}}&precio={{valor}}" class="btn btn-outline-primary card-link">Comprar a: ${{valor}}</a>
                    </div>
                </div>
            </div>
        {{/ediciones}}
    </div>
</div>

{{> footer}}