{{> cabecera}}

<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Infonete</h2>

    <div class='w3-row w3-padding-32'>
        {{#ediciones}}
            <div class='w3-third' style=" height: 23%;">
                <h3><p>Edicion #{{descrip}}</p></h3>
                <div>
                    <img src='../public/img/numeral.png' class='w3-round w3-margin-bottom' style='width:70%;height: 25%;'>
                </div>
                <div style="width: 50%;float:left;padding: 2%;">
                    <a href="/lector/verNotasxEdicion?idEdicion={{id}}" style="border-bottom: 1px solid black;text-decoration: none; border-bottom: none;">
                        <button type="submit" name="idEdicion" class="btn btn-outline-primary" style="height:60px;" value={{id}}>Ver notas</button>
                    </a>
                </div>
                <div style="width: 50%;float:left;padding: 2%;">
                    <a href="comprarEdicion?idEdicion={{id}}&precio={{valor}}" class="btn btn-outline-primary" style="  border: darkcyan 1px solid; padding :5px"  >Comprar a: ${{valor}}</a>
                </div>
            </div>
        {{/ediciones}}
    </div>

</div>

{{> footer}}