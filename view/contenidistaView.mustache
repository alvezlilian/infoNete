{{> cabecera}}
<!-- The Band Section -->
<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Infonete</h2>
  
    <div class='w3-row w3-padding-32'>
            {{#publicaciones}}
                <div class='w3-third' style=" height: 23%;">
                    <h3><p>{{informacion}}</p></h3>
                    <div>
                      <img src='../{{ruta}}' class='w3-round w3-margin-bottom' style='width:70%;height: 25%;'>
                    </div>
                    <div style="width: 50%;float:left;padding: 2%;" >
                        <form method="post" action="/contenidista/modificarPublicacion">
                             <button type="submit" name="modificar"
                            class="btn btn-outline-primary" value={{id}}>Modificar</button>
                        </form>
                    </div>
                    <div style="width: 50%;float:left;padding: 2%;">
                        <form method="post" action="/contenidista/procesaEliminarPublicacion" >
                            <button type="submit" name="eliminar"  class="btn btn-outline-primary" value={{id}}
                            onclick="return confirm('¿Estas seguro de eliminar a {{informacion}}');">Eliminar</button>
                        </form>
                    </div>

                </div>
            {{/publicaciones}}

            <div style="float: right">
               <a href='/login/validarLogin' class='w3-bar-item w3-button w3-padding-large w3-hide-small'>Iniciar Sesión</a>
               <a href='/login/cerrarSesion' class='w3-bar-item w3-button w3-padding-large'>Cerrar Sesión</a>
            </div>
    </div>

</div>
{{> footer}}